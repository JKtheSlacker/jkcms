<% form_for([@post, @post.comments.build]) do |f| %>
  <%= f.error_messages %>
  
  <table>
    <tbody>
      <tr>
        <td><%= f.label "Name:" %></td>
        <td><%= f.text_field :nombre %><td>
      </tr>
      <tr>
        <td><%= f.label "Site/URL:" %></td>
        <td><%= f.text_field :sitio %></td>
      </tr>
      <tr>
        <td><%= f.label "Comment:" %></td>
        <td><%= f.text_area :comentario %>
          <span style="display:none">Leave Blank:</span>
          <%= text_field_tag "name", nil, :class => 'special'%>
          <%= f.submit "Submit Comment" %></td>
      </tr>
  </table>
<% end %>      