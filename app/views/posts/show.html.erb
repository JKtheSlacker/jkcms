<p>
  <b>Date:</b>
  <%=h @post.date %>
</p>

<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Category:</b>
  <%=h @post.category %>
</p>

<p>
  <b>Description:</b>
  <%=h @post.postdesc %>
</p>

<p>
  <b>Content:</b>
  <%=h @post.content %>
</p>

<% @post.comments.each do |c| %>
  <%= render :partial => "comments/show", :locals =>
    { :comment => c } %>
<% end %>

<%= render "comments/form" %>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>
<%= link_to 'Manage Comments', post_comments_path(@post) %>