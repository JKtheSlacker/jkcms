<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :postdesc %><br />
    <%= f.text_area :postdesc %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.text_area :category %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>